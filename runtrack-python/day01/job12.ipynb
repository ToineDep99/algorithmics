    "def draw_triangle(h) :\n",
    "    for i in range(h) :\n",
    "        if i!=(h-1) :\n",
    "            print(' '*(h-i-1)+'/'+' '*2*i+'\\\\'+' '*(h-i-1))\n",
    "        else :\n",
    "            print('/'+'_'*2*(h-1)+'\\\\')\n",
    "        #print(' '*(h-1)+'/'+'_'*2*(h-1)+'\\\\'+' '*(h-1))"
   ]
  },
