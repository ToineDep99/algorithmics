   "source": [
    "def power(x, n) :\n",
    "    if n==0 :\n",
    "        return(1)\n",
    "    elif n<0 :\n",
    "        if x==0 :\n",
    "            raise ValueError(\"Zero to a negative power\")\n",
    "        else :\n",
    "            return(1/(power(x, -n)))\n",
    "    else :\n",
    "        return(x*power(x, n-1))"
   ]
  },
